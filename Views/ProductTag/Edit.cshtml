@model inventoryApp.Models.ProductTag

<div class="container mt-5">
    <h2>Edit Product Tag</h2>

    <form asp-action="Edit" method="post" class="mt-4">
        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Tag Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a href="/ProductTag" class="btn btn-secondary">Cancel</a>
    </form>
</div>





