@model inventoryApp.Models.Product
<style>
    .status-instock {
        color: white;
        background-color: #007bff;
        padding: 4px 8px;
        border-radius: 5px;
    }

    .status-outofstock {
        color: white;
        background-color: #dc3545;
        padding: 4px 8px;
        border-radius: 5px;
    }

    .status-reserved {
        color: black;
        background-color: #ffc107;
        padding: 4px 8px;
        border-radius: 5px;
    }

    .status-damaged {
        color: black;
        background-color: #ffc107;
        padding: 4px 8px;
        border-radius: 5px;
    }

    .status-default {
        color: white;
        background-color: #6c757d;
        padding: 4px 8px;
        border-radius: 5px;
    }
</style>

<h1>Product Details</h1>

<div class="form-group mb-3">
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C")</dd>
        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">
            @{
                string statusClass = Model.StatusName switch
                {
                    "In Stock" => "status-instock",
                    "Out of Stock" => "status-outofstock",
                    "Reserved" => "status-reserved",
                    "Damaged" => "status-damaged",
                    _ => "status-default"
                };
            }
            <span class="@statusClass">@Model.StatusName</span>
        </dd>

    </dl>
</div>


<h1>Edit</h1>
<form method="post">
    <input type="hidden" asp-for="Id" />
    <input asp-for="Name" /><br />
    <input asp-for="Price" /><br />
    <input asp-for="Quantity" /><br />
    <button type="submit">Save</button>
</form>

<div>
    <a href="/Product" class="btn btn-primary">Back to List</a>
</div>

