@model inventoryApp.Models.Product

<h1>Product Details</h1>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C")</dd>
        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>
    </dl>
</div>


<h1>Edit</h1>
<form method="post">
    <input type="hidden" asp-for="Id" />
    <input asp-for="Name" /><br />
    <input asp-for="Price" /><br />
    <input asp-for="Quantity" /><br />
    <button type="submit">Save</button>
</form>

<div>
    <a href="/Product" class="btn btn-primary">Back to List</a>
</div>
