@model List<inventoryApp.Models.Product>

<style>
    .status-instock {
        color: white;
        background-color: #007bff;
        padding: 4px 8px;
        border-radius: 5px;
    }

    .status-outofstock {
        color: white;
        background-color: #dc3545;
        padding: 4px 8px;
        border-radius: 5px;
    }

    .status-reserved {
        color: black;
        background-color: #ffc107;
        padding: 4px 8px;
        border-radius: 5px;
    }

    .status-damaged {
        color: black;
        background-color: #ffc107;
        padding: 4px 8px;
        border-radius: 5px;
    }

    .status-default {
        color: white;
        background-color: #6c757d;
        padding: 4px 8px;
        border-radius: 5px;
    }

    table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 10px;
    }

    th, td {
        padding: 10px;
        text-align: left;
    }
</style>

<h1>Product List</h1>
<a href="/Product/Create">Add Product</a>

<table style="width: 100%; border-collapse: separate; border-spacing: 10px;">
    <tr>
        <th style="padding: 10px;">Name</th>
        <th style="padding: 10px;">Price</th>
        <th style="padding: 10px;">Qty</th>
        <th style="padding: 10px;">Status</th>
        <th style="padding: 10px;">Actions</th>
    </tr>
    @foreach (var p in Model)
    {
        var statusClass = p.StatusName switch
        {
            "In Stock" => "status-instock",
            "Out of Stock" => "status-outofstock",
            "Reserved" => "status-reserved",
            "Damaged" => "status-damaged",
            _ => "status-default"
        };

        <tr>
            <td style="padding: 10px;">@p.Name</td>
            <td style="padding: 10px;">@p.Price</td>
            <td style="padding: 10px;">@p.Quantity</td>
            <td style="padding: 10px;">
                <span class="@statusClass">@p.StatusName</span>
            </td>
            <td style="padding: 10px;">
                <a href="/Product/Details/@p.Id">View</a> |
                <a href="/Product/Edit/@p.Id">Edit</a> |
                <a href="/Product/Delete/@p.Id">Delete</a>
            </td>
        </tr>
    }
</table>
