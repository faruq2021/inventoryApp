<!-- Views/Category/Details.cshtml -->
@model inventoryApp.Models.Category
<div class="container mt-5">
    <h1 class="game-title">🔍 Category Details</h1>
    <div class="game-card">
        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Details</dt>
            <dd class="col-sm-9">@Model.Details</dd>
        </dl>
        <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">✏️ Edit</a>
            <a asp-action="Index" class="btn btn-secondary">↩️ Back to List</a>
        </div>
    </div>
</div>