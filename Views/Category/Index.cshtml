<!-- Views/Category/Index.cshtml -->
@model IEnumerable<inventoryApp.Models.Category>
<div class="container mt-5">
    <h1 class="game-title">📂 Category List</h1>
    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-game">➕ Create New</a>
    </div>
    <div class="game-card">
        <table class="table table-dark table-hover text-center">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Details</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Details</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">✏️</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">🔍</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">🗑️</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>