@model List<inventoryApp.Models.Brand>

<h1>Brand List</h1>
<a href="/Brand/Create" class="btn btn-primary mb-3">Add Brand</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Logo</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var brand in Model)
        {
            <tr>
                <td>@brand.Name</td>
                <td>@brand.Description</td>
                <td>
                    @if (!string.IsNullOrEmpty(brand.LogoUrl))
                    {
                        <img src="@brand.LogoUrl" alt="@brand.Name logo" style="max-height: 50px;" />
                    }
                    else
                    {
                        <span>No logo</span>
                    }
                </td>
                <td>
                    <a href="/Brand/Details/@brand.Id" class="btn btn-info btn-sm">View</a>
                    <a href="/Brand/Edit/@brand.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a href="/Brand/Delete/@brand.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>